<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ttapp.fragments.HomeFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:elevation="@dimen/dp_5"
        android:background="@color/orange">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fragment_home_actionbar"
            android:background="@color/orange"
            app:layout_scrollFlags="scroll|enterAlways"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_menu_icon_white"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragment_home_menu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/app_name" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/appbar"
       android:background="@color/gray">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="@dimen/dp_10">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/fragment_home_pager_layout">
       <android.support.v4.view.ViewPager
           android:id="@+id/fragment_home_view_pager"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_250" />

       <LinearLayout
           android:id="@+id/fragment_home_layoutDots"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_30"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/dp_20"
           android:gravity="center"
           android:orientation="horizontal"></LinearLayout>
           </RelativeLayout>

           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:elevation="@dimen/dp_10"
               android:background="@android:color/white"
               android:layout_margin="@dimen/dp_10"
               android:layout_below="@+id/fragment_home_pager_layout">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/shop_by_category"
                   android:layout_below="@+id/adapter_products_image"
                   android:layout_centerHorizontal="true"
                   android:paddingTop="@dimen/dp_10"
                   android:paddingBottom="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:textColor="@android:color/black"
                   android:id="@+id/fragment_home_shopby"/>
              <!-- <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_1"
                   android:background="@color/gray"
                   android:layout_below="@+id/fragment_home_shopby"
                   android:id="@+id/fragment_home_view"/>-->
           <android.support.v7.widget.RecyclerView
               android:scrollbars="none"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/fragment_home_recyclerview"
               android:layout_below="@+id/fragment_home_shopby"
               android:background="@android:color/white">
           </android.support.v7.widget.RecyclerView>
           </RelativeLayout>
           </android.support.v7.widget.CardView>
       </RelativeLayout>
   </ScrollView>
</RelativeLayout>
