<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ttapp.adapters.CartAdapter">

    <RelativeLayout
        android:id="@+id/cart_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/adapter_cart_image"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_130"
        android:src="@drawable/peanuts"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/adapter_cart_image"
            android:layout_marginTop="@dimen/dp_20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peanuts"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_16"/>

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_delete"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Kg"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/cart_product_qty"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="-"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="Rs"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="100"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp_16"
                    android:id="@+id/cart_product_price"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15">
                <TextView
                    android:id="@+id/adapter_cart_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="Rs"
                    android:paddingTop="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="3000"
                    android:paddingTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/adapter_cart_rs"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_18"/>

                <RelativeLayout
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:background="@color/agri_green"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15">
                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@mipmap/ic_minus_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_16"/>
                    <ImageView
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@mipmap/ic_plus_icon"
                        android:paddingRight="@dimen/dp_5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lighter_gray"
        android:layout_below="@+id/cart_product_layout"/>

</RelativeLayout>
